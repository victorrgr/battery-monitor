<!DOCTYPE html>
<html lang="en-US">
<head>
    <title>Battery Monitor Report</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <h2>Battery Percentage Over Time</h2>
    <canvas id="batteryChart" width="800" height="400"></canvas>
    <script>
        const ctx = document.getElementById('batteryChart').getContext('2d');
        const chart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: [{{range $i, $v := .Timestamps}}{{if $i}},{{end}}"{{$v}}"{{end}}],
                datasets: [{
                    label: 'Battery %',
                    data: [{{range $i, $v := .Percents}}{{if $i}},{{end}}{{$v}}{{end}}],
                    borderColor: 'rgba(75, 192, 192, 1)',
                    tension: 0.1
                }]
            },
            options: {
                scales: {
                    y: {
                        min: 0,
                        max: 100,
                        title: {
                            display: true,
                            text: 'Battery %'
                        }
                    }
                }
            }
        });
    </script>
</body>
</html>